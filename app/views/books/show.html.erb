<div class="container px-5 px-sm-0">
  <div class="row">
  <%= render 'list', book: @book_new, user: @user %>
<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table table-hover-table-inverse">
    <thead>
    </thead>
    <tbody>
      <tr>
        <td><%= image_tag @user.get_profile_image(100,100) %><br>
            <%= link_to @book.user.name, @book.user %>
        </td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td>
          <% if @book.user == current_user %>
          <%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-success" %></td>
          <% end %>
        <td>
          <% if @book.user == current_user %>
          <%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
</div>
</div>